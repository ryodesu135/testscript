local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Lights Hub",
    LoadingTitle = "Loading Lights Hub",
    LoadingSubtitle = "by Ryo",
    Theme = "Default",
    ToggleUIKeybind = "K",
    KeySystem = false
})

local MainTab = Window:CreateTab("ğŸ  | Main", nil)
local MainSection = MainTab:CreateSection("Main")

local WalkSlider = MainTab:CreateSlider({
   Name = "Walk Speed",
   Range = {30, 150},
   Increment = 1,
   Suffix = "Speed",
   CurrentValue = 35,
   Flag = "Slider1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
   game.Players.LocalPlayer.Humanoid.Game.WalkSpeed = Value --workspace.isu002.Humanoid
   end, 
})

-- å…ˆåˆ›å»º Dropdown
local MobDropdown = MainTab:CreateDropdown({
    Name = "Nearby Mobs",
    Options = {"None"},
    CurrentOption = {"None"},
    MultipleOptions = false,
    Flag = "MobDropdown",
    Callback = function(Option)
        print("ä½ é€‰æ‹©äº†:", Option[1])
    end,
})

-- è‡ªå®šä¹‰å‡½æ•°ï¼šåŠ¨æ€æ›´æ–° Dropdown
local function UpdateDropdownOptions(dropdown, options)
    -- æ¸…ç©ºæ—§é€‰é¡¹
    for i = #dropdown.Options, 1, -1 do
        table.remove(dropdown.Options, i)
    end
    -- å¡«å…¥æ–°é€‰é¡¹
    for _, opt in ipairs(options) do
        table.insert(dropdown.Options, opt)
    end
    -- æ‰‹åŠ¨æ›´æ–°UIæ–‡å­—
    dropdown.CurrentOption = {options[1]}
    dropdown.Text:SetText(options[1])
end

-- æŒ‰é’®ï¼šæ‰«æ mobs
local ScanButton = MainTab:CreateButton({
    Name = "ğŸ” Scan Nearby Mobs",
    Callback = function()
        print("æ­£åœ¨æ‰«æé™„è¿‘çš„ mobs...")

        local mobs = {}

        for _, mob in pairs(workspace:GetChildren()) do
            if mob:IsA("Model") and mob:FindFirstChild("Humanoid") then
                if string.find(string.lower(mob.Name), "mob") then
                    table.insert(mobs, mob.Name)
                end
            end
        end

        if #mobs == 0 then
            mobs = {"æœªæ‰¾åˆ°ä»»ä½• mobs"}
        end

        -- âœ… æ›´æ–° Dropdownï¼Œè€Œä¸æ˜¯é‡å»ºæˆ–é”€æ¯
        UpdateDropdownOptions(MobDropdown, mobs)

        print("æ‰«æå®Œæˆï¼Œæ‰¾åˆ°:", table.concat(mobs, ", "))
    end,
})
